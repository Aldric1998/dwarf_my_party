<div class="btn btn-info">
<%= link_to "add", new_dwarf_path%>
</div>
<div id="map-cards-align">

<div class="card-dwarf">
    <% @dwarves.each do |dwarf| %>
     <div class="box">
        <div class="img">
          <% if dwarf.picture.attached?%>
              <%= link_to dwarf_path(dwarf) do %>
              <%= cl_image_tag dwarf.picture.key %>
              <% end %>
            <% else %>
              <%= link_to dwarf_path(dwarf) do %>
              <%= image_tag "https://cdn.icon-icons.com/icons2/1769/PNG/512/4092564-about-mobile-ui-profile-ui-user-website_114033.png" %>
              <% end %>
          <% end %>
        </div>
        <h2>
          <%= dwarf.name %>
          <br>
          <span><%= dwarf.localisation %></span>
        </h2>
        <p><%= dwarf.description %></p>
        <div class="btn btn-danger">
        <% if dwarf.user == current_user %>
            <%= link_to "Delete", dwarf_path(dwarf), method: "delete", data: { confirm: "Are you sure?" }%>
        <% end %>
        </div>
      </div>
     <% end %>
</div>

<div id="map"
     style="width: 35%; height: 600px; position: sticky; top: 65px; margin-top: 10px; background-color: #E3E0CF; border-radius: 5px; margin-right: 15px"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
