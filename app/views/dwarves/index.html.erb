<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<h1>Dwarves</h1>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="card">
    <div class="box">
    <% @dwarves.each do |dwarf| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card-product">
          <% if dwarf.picture.attached?%>
              <%= cl_image_tag dwarf.picture.key, height:200, width:200 %>
          <% end %>
              <div class="card-product-infos">
                <h2><%= dwarf.name %></h2>
                <p><strong><%= dwarf.price %></strong></p>
              </div>
            <p> <%=dwarf.availability ? "available" : "not available"%></p>
            <br>
            <%= link_to "More", dwarf_path(dwarf)%>
        </div>
      </div>
     <%= link_to "Add", new_dwarf_path%>
     <% end %>
  </div>
