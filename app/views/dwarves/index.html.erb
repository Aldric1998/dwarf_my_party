<h1>Dwarves</h1>
  <div class="row">
    <% @dwarves.each do |dwarf| %>
       <div class="col-xs-12 col-sm-4">
          <div class="card">
            <%= dwarf.name %>
            <%= dwarf.price %>
            <%= cl_image_tag dwarf.picture.key, height: 180, width: 180, crop: :fill %>
            <hr>
            <%= "Availability: #{dwarf.availability}"  %>
            <%= link_to "More", dwarf_path(dwarf)%>
          </div>
      </div>
      <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    <% end %>
    <hr>
     <%= link_to "Add", new_dwarf_path%>
    <hr>
  </div>
